<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="50dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="20dp" >

        <TextView
            android:id="@+id/txtDialogBoxTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/do_you_want_to_delete_this_pok_mon"
            android:textStyle="italic"
            android:textSize="15sp"
            />
        
        <Space
            android:layout_width="0dp"
            android:layout_height="20dp"/>


        <CheckBox
            android:id="@+id/dontShowAgainCheckBox"
            android:layout_width="185dp"
            android:layout_height="20dp"
            android:text="@string/don_t_show_this_again" />


        <Space

            android:layout_width="0dp"
            android:layout_height="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"> <!-- Optional to define total weight -->

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel"/>

            <Space
                android:layout_width="30dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/yesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Yes"/>

        </LinearLayout>






    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tip_calculator_layout"
    android:background="@color/black"
    >

    <TextView
        android:id="@+id/txtEnterBillAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:text="@string/billAmount"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/edBillAmount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@+id/txtEnterBillAmount"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:inputType="numberDecimal"

        />

    <TextView
        android:id="@+id/txtTipSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edBillAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:text="@string/selectTip"
        android:textSize="20sp"
        />

    <SeekBar
        android:id="@+id/sbTipSelector"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTipSelector"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:max="20"
        android:progress="10"
        android:progressDrawable="@drawable/custom_seekbar"
        android:thumb="@drawable/custom_thumb" />


    <TextView
        android:id="@+id/txtDisplayTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sbTipSelector"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/txtTotalBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDisplayTip"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        android:textSize="30sp"

        />



<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="30dp">

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"

        >


        <LinearLayout
            android:id="@+id/photoAndNameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/pokemonIDTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/pokemonImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/pok_mon_image"
                android:layout_gravity="center"
                />






                <Space
                    android:layout_width="10dp"
                    android:layout_height="0dp"/>








        </LinearLayout>


        <Space
            android:layout_width="10dp"
            android:layout_height="0dp"/>



        <LinearLayout
            android:id="@+id/pokemonTypeAttributeLocationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/pokemonNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="20sp"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pokemonTypeNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: "
                    android:textSize="20sp" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/pokemonTypeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textStyle="italic"
                    android:textSize="20sp" />


            </LinearLayout>

<!--            <Space-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="11dp"/>-->



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pokemonAttributesNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atts:"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/pokemonAttributesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attributes"
                    android:textStyle="italic"
                    android:textSize="20sp"/>



            </LinearLayout>

<!--            <Space-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="11.5dp"/>-->





            <TextView
                android:id="@+id/pokemonLocationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location........................"
                android:textSize="20sp"
                >

            </TextView>

        </LinearLayout>








    </LinearLayout>




</androidx.cardview.widget.CardView>